{
  "name": "TrackTile",
  "description": "Track how much time you spend on different kinds of websites and save that information locally on your computer, without sharing it.",
  "version": "0.0.1",
  "manifest_version": 2,
  "permissions": ["storage", "activeTab", "tabs"],
  "options_page": "./options.html",
  "background": {
    "scripts": ["./background.min.js"]
  },
  "icons": {
    "16": "./images/favicon-16.png",
    "64": "./images/favicon-64.png",
    "128": "./images/favicon-128.png"
  },
  "browser_action": {
    "default_icon": "./images/favicon-64.png"
  }
}
